<GamePage@BoxLayout>:
    name: 'game_page'
    canvas.before:
        Rectangle:
            source: 'assets/backgrounds/taman3.jpg'
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 1
        rows: 4        
        Image:
            source: 'assets/icons/title_box.png'
            # pos_hint: {'center_x': 0.5, 'center_y': 0.9}   
            height: 300
            allow_stretch: False
            keep_ratio: True      
        Image:
            id: image_soal
            # source: 'db/images/angsa.png'
            source: ''
            pos_hint: {'center_x': 0.5}   
            size_hint: 0.6, 0.6
            # allow_stretch: True  
            keep_ratio: True  
        GridLayout:
            cols:3
            Label:
                text: ''    
            GridLayout:
                id: answer_container
                # orientation: 'horizontal'
                size_hint: None, None
                # height: 50
                spacing: 30
            Label:
                text: ''           
        GridLayout:
            cols:3
            Label:
                text: ''            
            BoxLayout:
                id: option_container
                pos_hint: {'center_x': 0.5}
                spacing: 30 
            Label:
                text: ''        

<RandomAnswer@Button>:    
    size_hint: None, None
    width: 120
    height: 120
    canvas:
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10, 10, 10] 
    Label:
        text: root.label_text
        font_name: "assets/fonts/wawa.ttf"
        halign: 'center'
        valign: 'middle'
        pos: root.pos
        font_size: '50sp'
        color: 0, 0, 0, 1 


             



