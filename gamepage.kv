<WinDecoration@Rectangle>
    source: 'assets/backgrounds/baloons.jpg'
    size: self.size
    pos: self.pos 

<RandomAnswer@Button>:    
    size_hint: None, None
    width: 120
    height: 120
    canvas:
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10, 10, 10] 
    Label:
        text: root.label_text
        font_name: "assets/fonts/wawa.ttf"
        halign: 'center'
        valign: 'middle'
        pos: root.pos
        font_size: '50sp'
        color: 0, 0, 0, 1  



<AnswerBox@Button>:
    size_hint: None, None
    width: 120
    height: 120
    canvas:
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10, 10, 10] 
    Label:
        text: root.label_text
        font_name: "assets/fonts/wawa.ttf"
        halign: 'center'
        valign: 'middle'
        pos: root.pos
        font_size: '50sp'
        color: 0, 50, 0, 1     

<OptionLabel>
    text: ''
    font_name: "assets/fonts/wawa.ttf"
    size_hint_y: None
    font_size: '30sp'
