<TemaPage>:
    name: 'tema_page'
    Image:
        source: 'assets/backgrounds/taman1.jpg' 
        allow_stretch: True
        keep_ratio: False
    Image:
        source: 'assets/icons/tema.png'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}   
        height: 1000
        allow_stretch: False
        keep_ratio: True
    BoxLayout:
        orientation: 'horizontal'
        spacing: 100      
        size_hint: 0.6, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}    
        Button:
            size: 400,400
            size_hint: None,None
            # height: 800
            allow_stretch: False
            keep_ratio: True
            # pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            background_normal: 'assets/tema/pakaian.jpg'  
            border: [0, 0, 0, 0] 
            # on_press: app.root.current = 'game_page'
            on_press: root.gotoGamePage('pakaian')
        Button:
            size: 400,400
            size_hint: None,None
            # height: 800
            allow_stretch: False
            keep_ratio: True
            # pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            background_normal: 'assets/tema/buah.jpg'  
            border: [0, 0, 0, 0] 
            # on_press: app.root.current = 'game_page'
            on_press: root.gotoGamePage('buah')
        Button:
            size: 400,400
            size_hint: None,None
            # height: 800
            allow_stretch: False
            keep_ratio: True
            # pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            background_normal: 'assets/tema/binatang.jpg'  
            border: [0, 0, 0, 0] 
            # on_press: app.root.current = 'game_page'
            on_press: root.gotoGamePage('binatang')
        Button:
            size: 400,400
            size_hint: None,None
            # height: 800
            allow_stretch: False
            keep_ratio: True
            # pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            background_normal: 'assets/tema/kendaraan.jpg'  
            border: [1, 1, 1, 1] 
            on_press: root.gotoGamePage('transportasi')